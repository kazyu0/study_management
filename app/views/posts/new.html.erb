<h1>新規投稿</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :name, '名前' %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :content, '内容' %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.label :image, '画像' %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.submit '投稿を作成' %>
  </div>
<% end %>

<%= link_to '一覧に戻る', posts_path %>