<h1>投稿一覧</h1>

<%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>

<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p>名前: <%= post.name %></p>
    <p>投稿者: <%= post.user.email %></p>
    <% if post.image.attached? %>
      <%= image_tag post.image, size: "150x150" %>
    <% end %>
  </div>
<% end %>